{
  "version": "0.1",
  "prefixes": {
    "schema": "http://schema.org/",
    "skos": "http://www.w3.org/2004/02/skos/core#",
    "omgeving": "https://data.vlaanderen.be/ns/omgevingsvergunning#",
    "adms": "http://www.w3.org/ns/adms#",
    "dct": "http://purl.org/dc/terms/",
    "time": "http://www.w3.org/2006/time#",
    "geosparql": "http://www.opengis.net/ont/geosparql#"
  },
  "resources": {
    "cases": {
      "name": "case",
      "class": "http://dbpedia.org/resource/Case",
      "attributes": {
      },
      "relationships": {
        "identifier": {
          "predicate": "adms:identifier",
          "target": "identificator",
          "cardinality": "one",
          "_comment": "Cardinality must be many"
        },
        "event": {
          "predicate": "dct:subject",
          "target": "event",
          "cardinality": "one"
        },
        "submissions": {
          "predicate": "omgeving:zaakhandeling",
          "target": "submission",
          "cardinality": "many"
        }
      },
      "features": ["include-uri"],
      "new-resource-base": "http://data.lblod.gift/id/dossier/"
    },
    "events": {
      "name": "event",
      "class": "omgeving:Activiteit",
      "attributes": {
        "description": {
          "type": "string",
          "predicate": "omgeving:beschrijving",
          "_comment": "Must be lang-string"
        }
      },
      "relationships": {
        "cases": {
          "predicate": "dct:subject",
          "target": "case",
          "cardinality": "many",
          "inverse": true
        },
        "locations": {
          "predicate": "omgeving:locatie",
          "target": "location",
          "cardinality": "many"
        },
        "timeframes": {
          "predicate": "omgeving:Activiteit.tijdsbestek",
          "target": "timeframe",
          "cardinality": "many"
        }
      },
      "features": ["include-uri"],
      "new-resource-base": "http://data.lblod.gift/id/activiteit/"
    },
    "submissions": {
      "name": "submission",
      "class": "omgeving:Aanvraag",
      "attributes": {
        "date": {
          "type": "datetime",
          "predicate": "omgeving:ingangsdatum"
        }
      },
      "relationships": {
        "applicant": {
          "predicate": "omgeving:aanvrager",
          "target": "organization",
          "cardinality": "one"
        },
        "case": {
          "predicate": "omgeving:zaakhandeling",
          "target": "case",
          "cardinality": "one",
          "inverse": true
        },
        "administrative-unit": {
          "predicate": "omgeving:Rechtshandeling.verantwoordelijke",
          "target": "bestuurseenheid",
          "cardinality": "one"
        },
        "editor-document": {
          "predicate": "ext:editorDocument",
          "target": "editor-document",
          "cardinality": "one"
        }
      },
      "features": ["include-uri"],
      "new-resource-base": "http://data.lblod.gift/id/aanvraag/"
    },
    "locations": {
      "name": "location",
      "class": "geosparql:Feature",
      "attributes": {

      },
      "relationships": {
        "event":{
          "predicate": "omgeving:locatie",
          "target": "event",
          "cardinality": "one",
          "inverse": true
        }
      },
      "features": ["include-uri"],
      "new-resource-base": "http://data.lblod.gift/id/feature/"
    },
    "timeframes": {
      "name": "timeframe",
      "class": "time:Interval",
      "attributes": {
        "start": {
          "type": "datetime",
          "predicate": "time:hasBeginning",
          "_comment": "Must be a relation to a time:Instant instance"
        },
        "end": {
          "type": "datetime",
          "predicate": "time:hasEnd",
          "_comment": "Must be a relation to a time:Instant instance"
        }
      },
      "relationships": {
        "event":{
          "predicate": "omgeving:Activiteit.tijdsbestek",
          "target": "event",
          "cardinality": "one",
          "inverse": true
        }
      },
      "features": ["include-uri"],
      "new-resource-base": "http://data.lblod.gift/id/tijdsduur/"
    }
  }
}
